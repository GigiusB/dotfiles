#!/bin/bash

if [[ "$1" =~ ".min.js" || "$1" =~ ".min.css" || $1 == test_* || $1 == *casper* ]] ; then
  exit 0
fi
FILE=$1
name=${FILE%.css}

curl -X POST -s --data-urlencode "input@${name}.css" http://cssminifier.com/raw > ${name}.min.css

